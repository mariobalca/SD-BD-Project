<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="general" extends="struts-default">
        <interceptors>
            <interceptor class="interceptors.LoginInterceptor" name="loginInterceptor">
            </interceptor>
            <interceptor-stack name="loginStack">
                <interceptor-ref name="loginInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <default-action-ref name="index"/>
        <action name="index"
                class="actions.General.IndexAction"
                method="execute">
            <result>/index.jsp</result>
        </action>
        <action name="dashboard"
                class="actions.General.DashboardAction"
                method="execute">
            <interceptor-ref name="loginStack" />
            <result name="login" type="redirectAction">getLogin</result>
            <result name="success">/dashboard.jsp</result>
        </action>

        <action name="listMyProjects"
                class="actions.Projects.ListProjectsAction"
                method="execute">
            <interceptor-ref name="loginStack" />
            <result name="login" type="redirectAction">getLogin</result>
            <result name="success">/listProjects.jsp</result>
        </action>
        <action name="listAllProjects"
                class="actions.Projects.ListProjectsAction"
                method="execute">
            <result name="success">/listProjects.jsp</result>
        </action>
        <action name="pledgeProj"
                class="actions.Projects.PledgeProjectAction"
                method="execute">
            <interceptor-ref name="loginStack" />
            <result name="login" type="redirectAction">getLogin</result>
            <result name="success">/pledgeProj.jsp</result>
        </action>

        <action name="rewards"
                class="actions.Rewards.ListRewardsAction"
                method="execute">
            <interceptor-ref name="loginStack" />
            <result name="login" type="redirectAction">getLogin</result>
            <result name="success">/rewards.jsp</result>
        </action>
        <action name="giveReward"
                class="actions.Rewards.GiveRewardAction"
                method="execute">
            <interceptor-ref name="loginStack" />
            <result name="login" type="redirectAction">getLogin</result>
            <result type="redirectAction" name="success">index</result>
        </action>

        <action name="getSignup" class="actions.Users.SignUpAction" method="get">
            <result name="success">/signup.jsp</result>
            <result name="rmidown">/rmiiDown.jsp</result>
        </action>
        <action name="postSignup" class="actions.Users.SignUpAction" method="post">
            <result name="success" type="redirectAction">dashboard</result>
            <result name="failed">/signup.jsp</result>
            <result name="rmidown">/rmiDown.jsp</result>
        </action>

        <action name="logout"
                class="actions.Users.LogoutAction"
                method="execute">
            <result type="redirectAction">index</result>
        </action>

        <action name="getLogin" class="actions.Users.LoginAction" method="get">
            <result name="success">/login.jsp</result>
            <result name="rmidown">/rmiiDown.jsp</result>
            <result name="redirect" type="redirectAction">dashboard</result>
        </action>

        <action name="postLogin" class="actions.Users.LoginAction" method="post">
            <result name="success" type="redirectAction">dashboard</result>
            <result name="failed">/login.jsp</result>
            <result name="rmidown">/rmiDown.jsp</result>
        </action>
    </package>
</struts>