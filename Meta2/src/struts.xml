<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <package name="helloworld" extends="struts-default">
        <action name="index"
                class="com.rpmstarter.usersController.LoginAction"
                method="logged">
            <result name="logged">/index.jsp</result>
            <result name="notlogged">/Login.jsp</result>
        </action>

        <action name="SignUp"
                class="com.rpmstarter.usersController.SignUpAction"
                method="execute">
            <result name="success">/index.jsp</result>
            <result name="failed">/index.jsp</result>
            <result name="rmidown">/RMIDown.jsp</result>
        </action>

        <action name="Login"
                class="com.rpmstarter.usersController.LoginAction"
                method="execute">
            <result name="success">/index.jsp</result>
            <result name="failed">/Login.jsp</result>
            <result name="rmidown">/RMIDown.jsp</result>
        </action>

    </package>
</struts>