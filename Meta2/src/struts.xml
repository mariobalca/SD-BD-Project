<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="helloworld" extends="struts-default">
        <default-action-ref name="Index"/>
        <action name="SignUp"
                class="com.rpmstarter.usersController.SignUpAction"
                method="execute">
            <result name="success" type="redirectAction">Index</result>
            <result name="failed">/SignUp.jsp</result>
            <result name="rmidown">/RMIDown.jsp</result>
        </action>

        <action name="Index"
                class="com.rpmstarter.usersController.IndexAction"
                method="execute">
            <result>/Index.jsp</result>

        </action>

        <action name="Rewards"
                class="com.rpmstarter.usersController.RewardsAction"
                method="execute">
            <result name = "success">/Rewards.jsp</result>
        </action>

        <action name="GiftReward"
                class="com.rpmstarter.usersController.GiftRewardAction"
                method="execute">
            <result type="redirectAction" name="success">Index</result>
        </action>


        <action name="ConsultProj"
                class="com.rpmstarter.usersController.ConsultProj"
                method="execute">
            <result name = "success">/ConsultProj.jsp</result>
        </action>

        <action name="PledgeProj"
                class="com.rpmstarter.usersController.PledgeProjAction"
                method="execute">
            <result name="success">/PledgeProj.jsp</result>
        </action>

        <action name="Logout"
                class="com.rpmstarter.usersController.LogoutAction"
                method="execute">
            <result type="redirectAction">Index</result>
        </action>

        <action name="Login"
                class="com.rpmstarter.usersController.LoginAction"
                method="execute">
            <result name="success" type="redirectAction">Index</result>
            <result name="failed">/Login.jsp</result>
            <result name="rmidown">/RMIDown.jsp</result>
        </action>
    </package>
</struts>